source $HOME/.vim/custom/environment.vim " OS specific stuff in there

set nocompatible        " no old school vi compatibility

" VUNDLE
filetype off

set rtp+=~/.vim/bundle/Vundle.vim

call vundle#begin()

Plugin 'VundleVim/Vundle.vim'
Plugin 'fatih/vim-go'
Plugin 'majutsushi/tagbar'

call vundle#end()
" ENDVUNDLE


if has("autocmd")
	filetype plugin indent on
endif


colorscheme industry


syntax on               " Set syntax highlighting
set showcmd		" Show (partial) command in status line.
set showmatch		" Show matching brackets.
set ignorecase		" Do case insensitive matching

source $HOME/.vim/custom/status.vim " status line info

set tags+=.tags;/        " Point vim to CTags files in project root


let g:tagbar_type_go = {
    \ 'ctagstype' : 'go',
    \ 'kinds'     : [
        \ 'p:package',
        \ 'i:imports:1',
        \ 'c:constants',
        \ 'v:variables',
        \ 't:types',
        \ 'n:interfaces',
        \ 'w:fields',
        \ 'e:embedded',
        \ 'm:methods',
        \ 'r:constructor',
        \ 'f:functions'
    \ ],
    \ 'sro' : '.',
    \ 'kind2scope' : {
        \ 't' : 'ctype',
        \ 'n' : 'ntype'
    \ },
    \ 'scope2kind' : {
        \ 'ctype' : 't',
        \ 'ntype' : 'n'
    \ },
    \ 'ctagsbin'  : 'gotags',
    \ 'ctagsargs' : '-sort -silent'
\ }

let g:go_fmt_command = "goimports"

source $HOME/.vim/custom/keybindings.vim

" List of plugins I have installed:
" surround.vim
" matchit.vim
" ruby_matchit.vim
" snipMate.vim
" NERD_tree.vim
" ragtag.vim
" ctrlp.vim
" ack.vim


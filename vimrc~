source $HOME/.vim/custom/environment.vim

set nocompatible        " no old school vi compatibility

colorscheme industry

if has("autocmd")
	filetype plugin indent on
endif

syntax on               " Set syntax highlighting
set showcmd		" Show (partial) command in status line.
set showmatch		" Show matching brackets.
set ignorecase		" Do case insensitive matching
set number              " Show line numbers

set tags+=tags;/        " Point vim to CTags files in project root

source $HOME/.vim/custom/keybindings.vim

" List of plugins I have installed:
" surround.vim
" matchit.vim
" ruby_matchit.vim
" snipMate.vim
" exuberant-ctags AND taglist.vim
" NERD_tree.vim
" ragtag.vim
" ctrlp.vim
" ack.vim

